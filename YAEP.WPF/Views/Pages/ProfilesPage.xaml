<Page
    x:Class="YAEP.Views.Pages.ProfilesPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:helpers="clr-namespace:YAEP.Helpers"
    xmlns:local="clr-namespace:YAEP.Views.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="ProfilesPage"
    d:DataContext="{d:DesignInstance local:ProfilesPage,
                                     IsDesignTimeCreatable=False}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
    ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    DataContext="{Binding RelativeSource={RelativeSource Self}}"
    mc:Ignorable="d">
    <Page.Resources>
        <helpers:NullToVisibilityConverter x:Key="NullToVisibilityConverter" />
        <helpers:CountToVisibilityConverter x:Key="CountToVisibilityConverter" />
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        <helpers:InverseBooleanToVisibilityConverter x:Key="InverseBooleanToVisibilityConverter" />
    </Page.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="16">
            <TextBlock
                FontSize="20"
                FontWeight="Medium"
                Text="Profile Management" />
            <TextBlock
                Margin="0,8,0,0"
                Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                Text="Create and manage profiles. Each profile has its own thumbnail settings and process configurations." />
            
            <TextBlock
                Margin="0,24,0,0"
                FontSize="16"
                FontWeight="Medium"
                Text="Create New Profile" />
            <StackPanel Margin="0,8,0,0" Orientation="Horizontal">
                <ui:TextBox
                    Width="200"
                    Margin="0,0,8,0"
                    Text="{Binding ViewModel.NewProfileName, Mode=TwoWay}" />
                <ui:Button
                    Command="{Binding ViewModel.CreateProfileCommand, Mode=OneWay}"
                    Content="Create" />
            </StackPanel>

            <TextBlock
                Margin="0,24,0,0"
                FontSize="16"
                FontWeight="Medium"
                Text="Profiles" />
            <ItemsControl
                Margin="0,8,0,0"
                ItemsSource="{Binding ViewModel.Profiles, Mode=OneWay}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border
                            Margin="0,0,0,8"
                            Padding="12"
                            Background="{DynamicResource ControlFillColorDefaultBrush}"
                            BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
                            BorderThickness="1"
                            CornerRadius="4">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                
                                <StackPanel Grid.Column="0">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock
                                            FontWeight="Medium"
                                            Text="{Binding Name, Mode=OneWay}" />
                                        <TextBlock
                                            Margin="8,0,0,0"
                                            FontSize="12"
                                            FontWeight="Medium"
                                            Foreground="{DynamicResource SystemAccentColorBrush}"
                                            Text="(Active)"
                                            Visibility="{Binding IsActive, Converter={StaticResource BooleanToVisibilityConverter}}" />
                                    </StackPanel>
                                    <TextBlock
                                        Margin="0,4,0,0"
                                        FontSize="12"
                                        Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                        Text="{Binding Id, StringFormat='ID: {0}', Mode=OneWay}" />
                                </StackPanel>
                                
                                <StackPanel
                                    Grid.Column="1"
                                    Orientation="Horizontal">
                                    <ui:Button
                                        Margin="0,0,8,0"
                                        Command="{Binding DataContext.ViewModel.ActivateProfileCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                        CommandParameter="{Binding}"
                                        Content="Activate"
                                        Visibility="{Binding IsActive, Converter={StaticResource InverseBooleanToVisibilityConverter}}" />
                                    <ui:Button
                                        Margin="0,0,8,0"
                                        Command="{Binding DataContext.ViewModel.EditProfileCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                        CommandParameter="{Binding}"
                                        Content="Edit" />
                                    <ui:Button
                                        Appearance="Danger"
                                        Command="{Binding DataContext.ViewModel.DeleteProfileCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                        CommandParameter="{Binding}"
                                        Content="Delete" />
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <Border
                Margin="0,16,0,0"
                Padding="12"
                Background="{DynamicResource ControlFillColorDefaultBrush}"
                BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
                BorderThickness="1"
                CornerRadius="4"
                Visibility="{Binding ViewModel.EditingProfile, Converter={StaticResource NullToVisibilityConverter}}">
                <StackPanel>
                    <TextBlock
                        FontSize="16"
                        FontWeight="Medium"
                        Text="Edit Profile" />
                    <TextBlock
                        Margin="0,8,0,0"
                        Text="Profile Name" />
                    <ui:TextBox
                        Margin="0,8,0,0"
                        Text="{Binding ViewModel.EditingProfileName, Mode=TwoWay}" />
                    <StackPanel
                        Margin="0,12,0,0"
                        Orientation="Horizontal">
                        <ui:Button
                            Margin="0,0,8,0"
                            Command="{Binding ViewModel.SaveEditProfileCommand, Mode=OneWay}"
                            Content="Save" />
                        <ui:Button
                            Command="{Binding ViewModel.CancelEditProfileCommand, Mode=OneWay}"
                            Content="Cancel" />
                    </StackPanel>
                </StackPanel>
            </Border>

            <Expander
                Margin="0,24,0,0"
                Header="Deleted Profiles"
                IsExpanded="False"
                Visibility="{Binding ViewModel.DeletedProfiles.Count, Converter={StaticResource CountToVisibilityConverter}}">
                <ItemsControl
                    Margin="0,8,0,0"
                    ItemsSource="{Binding ViewModel.DeletedProfiles, Mode=OneWay}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border
                                Margin="0,0,0,8"
                                Padding="12"
                                Background="{DynamicResource ControlFillColorDefaultBrush}"
                                BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
                                BorderThickness="1"
                                CornerRadius="4"
                                Opacity="0.7">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    
                                    <StackPanel Grid.Column="0">
                                        <TextBlock
                                            FontWeight="Medium"
                                            Text="{Binding Name, Mode=OneWay}" />
                                        <TextBlock
                                            Margin="0,4,0,0"
                                            FontSize="12"
                                            Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                            Text="{Binding DeletedAt, StringFormat='Deleted: {0:g}', Mode=OneWay}" />
                                    </StackPanel>
                                    
                                    <StackPanel
                                        Grid.Column="1"
                                        Orientation="Horizontal">
                                        <ui:Button
                                            Command="{Binding DataContext.ViewModel.RestoreProfileCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                            CommandParameter="{Binding}"
                                            Content="Restore" />
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Expander>
        </StackPanel>
    </ScrollViewer>
</Page>

