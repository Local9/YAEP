<ui:FluentWindow
    x:Class="YAEP.Views.Windows.EditGroupWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:helpers="clr-namespace:YAEP.Helpers"
    xmlns:local="clr-namespace:YAEP.Views.Windows"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="Edit Group"
    Width="600"
    Height="500"
    d:DataContext="{d:DesignInstance local:EditGroupWindow,
                                     IsDesignTimeCreatable=False}"
    d:DesignHeight="450"
    d:DesignWidth="600"
    ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
    ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    ExtendsContentIntoTitleBar="True"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    WindowBackdropType="Mica"
    WindowCornerPreference="Round"
    WindowStartupLocation="CenterOwner"
    ResizeMode="CanResize"
    Focusable="True"
    KeyboardNavigation.IsTabStop="False"
    DataContext="{Binding RelativeSource={RelativeSource Self}}"
    mc:Ignorable="d">
    <Window.Resources>
        <helpers:NullToVisibilityConverter x:Key="NullToVisibilityConverter" />
        <helpers:CountToVisibilityConverter x:Key="CountToVisibilityConverter" />
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        
        <ui:TitleBar
            x:Name="TitleBar"
            Title="Edit Group"
            Grid.Row="0"
            CloseWindowByDoubleClickOnIcon="True">
            <ui:TitleBar.Icon>
                <ui:ImageIcon Source="pack://application:,,,/Assets/wpfui-icon-256.png" />
            </ui:TitleBar.Icon>
        </ui:TitleBar>
        
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="24">
                <TextBlock
                    FontSize="20"
                    FontWeight="Medium"
                    Text="Edit Group" />
                <TextBlock
                    Margin="0,8,0,0"
                    FontSize="12"
                    Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                    Text="Edit group name and manage clients in this group." />
                
                <!-- Group Name Edit -->
                <TextBlock
                    Margin="0,24,0,0"
                    Text="Group Name:" />
                <StackPanel Margin="0,8,0,0" Orientation="Horizontal">
                    <ui:TextBox
                        Width="300"
                        Margin="0,0,8,0"
                        Text="{Binding ViewModel.EditingGroupName, Mode=TwoWay}" />
                    <ui:Button
                        Margin="0,0,4,0"
                        Command="{Binding ViewModel.SaveEditGroupCommand, Mode=OneWay}"
                        Content="Save" />
                    <ui:Button
                        Command="{Binding ViewModel.CancelEditGroupCommand, Mode=OneWay}"
                        Content="Cancel" />
                </StackPanel>

                <!-- Clients in Editing Group -->
                <TextBlock
                    Margin="0,24,0,0"
                    FontSize="16"
                    FontWeight="Medium"
                    Text="Clients in Group" />
                <TextBlock
                    Margin="0,8,0,0"
                    FontSize="12"
                    Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                    Text="Manage the clients in this group. Use the up/down arrows to reorder, or remove clients from the group." />
                
                <ItemsControl
                    Margin="0,8,0,0"
                    ItemsSource="{Binding ViewModel.EditingGroupMembers, Mode=OneWay}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border
                                Margin="0,0,0,8"
                                Padding="12"
                                Background="{DynamicResource ControlFillColorDefaultBrush}"
                                BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
                                BorderThickness="1"
                                CornerRadius="4">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    
                                    <TextBlock
                                        Grid.Column="0"
                                        VerticalAlignment="Center"
                                        Text="{Binding WindowTitle, Mode=OneWay}" />
                                    
                                    <StackPanel
                                        Grid.Column="1"
                                        Orientation="Horizontal">
                                        <ui:Button
                                            Margin="0,0,4,0"
                                            Command="{Binding DataContext.ViewModel.MoveClientUpCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                            CommandParameter="{Binding WindowTitle}"
                                            Content="↑" />
                                        <ui:Button
                                            Margin="0,0,4,0"
                                            Command="{Binding DataContext.ViewModel.MoveClientDownCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                            CommandParameter="{Binding WindowTitle}"
                                            Content="↓" />
                                        <ui:Button
                                            Command="{Binding DataContext.ViewModel.RemoveClientFromGroupCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                            CommandParameter="{Binding WindowTitle}"
                                            Content="Remove" />
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
                
                <!-- Add Clients Section -->
                <TextBlock
                    Margin="0,24,0,0"
                    FontSize="16"
                    FontWeight="Medium"
                    Text="Add Clients to Group" />
                <TextBlock
                    Margin="0,8,0,0"
                    FontSize="12"
                    Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                    Text="Select ungrouped clients to add to this group." />
                
                <ItemsControl
                    Margin="0,8,0,0"
                    ItemsSource="{Binding ViewModel.UngroupedClients, Mode=OneWay}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border
                                Margin="0,0,0,8"
                                Padding="12"
                                Background="{DynamicResource ControlFillColorDefaultBrush}"
                                BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
                                BorderThickness="1"
                                CornerRadius="4">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    
                                    <TextBlock
                                        Grid.Column="0"
                                        VerticalAlignment="Center"
                                        Text="{Binding Mode=OneWay}" />
                                    
                                    <ui:Button
                                        Grid.Column="1"
                                        Command="{Binding DataContext.ViewModel.AddClientToGroupCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                        CommandParameter="{Binding}"
                                        Content="Add to Group" />
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
                
                <!-- Hotkey Configuration -->
                <Border
                    Margin="0,24,0,0"
                    Padding="16"
                    Background="{DynamicResource ControlFillColorSecondaryBrush}"
                    BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="4">
                    <StackPanel>
                        <TextBlock
                            FontSize="16"
                            FontWeight="Medium"
                            Text="Hotkeys" />
                        <TextBlock
                            Margin="0,8,0,0"
                            FontSize="12"
                            Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                            Text="Configure hotkeys for cycling between clients in this group. These will activate the next/previous client in the cycle." />
                        
                        <Grid Margin="0,8,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="200" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <TextBlock
                                Grid.Row="0"
                                Grid.Column="0"
                                VerticalAlignment="Center"
                                Text="Cycle Group Forward:" />
                            <StackPanel
                                Grid.Row="0"
                                Grid.Column="1"
                                Margin="8,0,0,0"
                                Orientation="Horizontal">
                                <ui:Button
                                    MinWidth="200"
                                    HorizontalAlignment="Left"
                                    Command="{Binding ViewModel.StartCaptureForwardHotkeyCommand, Mode=OneWay}"
                                    ToolTip="Click and then press the key combination you want to use">
                                    <TextBlock>
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Text" Value="Click to set hotkey..." />
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding ViewModel.IsCapturingForwardHotkey}" Value="True">
                                                        <Setter Property="Text" Value="Press key combination..." />
                                                    </DataTrigger>
                                                    <MultiDataTrigger>
                                                        <MultiDataTrigger.Conditions>
                                                            <Condition Binding="{Binding ViewModel.IsCapturingForwardHotkey}" Value="False" />
                                                            <Condition Binding="{Binding ViewModel.CurrentGroupForwardHotkey, Converter={StaticResource NullToVisibilityConverter}}" Value="Visible" />
                                                        </MultiDataTrigger.Conditions>
                                                        <Setter Property="Text" Value="{Binding ViewModel.CurrentGroupForwardHotkey, Mode=OneWay}" />
                                                    </MultiDataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </ui:Button>
                                <ui:Button
                                    Margin="8,0,0,0"
                                    Command="{Binding ViewModel.StopCaptureHotkeyCommand, Mode=OneWay}"
                                    Content="Cancel"
                                    Visibility="{Binding ViewModel.IsCapturingForwardHotkey, Converter={StaticResource BooleanToVisibilityConverter}}" />
                                <ui:Button
                                    Margin="8,0,0,0"
                                    Command="{Binding ViewModel.ClearForwardHotkeyCommand, Mode=OneWay}"
                                    Content="Clear"
                                    ToolTip="Remove the hotkey assignment"
                                    Visibility="{Binding ViewModel.CurrentGroupForwardHotkey, Converter={StaticResource NullToVisibilityConverter}}" />
                            </StackPanel>

                            <TextBlock
                                Grid.Row="1"
                                Grid.Column="0"
                                Margin="0,8,0,0"
                                VerticalAlignment="Center"
                                Text="Cycle Group Backward:" />
                            <StackPanel
                                Grid.Row="1"
                                Grid.Column="1"
                                Margin="8,8,0,0"
                                Orientation="Horizontal">
                                <ui:Button
                                    MinWidth="200"
                                    HorizontalAlignment="Left"
                                    Command="{Binding ViewModel.StartCaptureBackwardHotkeyCommand, Mode=OneWay}"
                                    ToolTip="Click and then press the key combination you want to use">
                                    <TextBlock>
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Text" Value="Click to set hotkey..." />
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding ViewModel.IsCapturingBackwardHotkey}" Value="True">
                                                        <Setter Property="Text" Value="Press key combination..." />
                                                    </DataTrigger>
                                                    <MultiDataTrigger>
                                                        <MultiDataTrigger.Conditions>
                                                            <Condition Binding="{Binding ViewModel.IsCapturingBackwardHotkey}" Value="False" />
                                                            <Condition Binding="{Binding ViewModel.CurrentGroupBackwardHotkey, Converter={StaticResource NullToVisibilityConverter}}" Value="Visible" />
                                                        </MultiDataTrigger.Conditions>
                                                        <Setter Property="Text" Value="{Binding ViewModel.CurrentGroupBackwardHotkey, Mode=OneWay}" />
                                                    </MultiDataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </ui:Button>
                                <ui:Button
                                    Margin="8,0,0,0"
                                    Command="{Binding ViewModel.StopCaptureHotkeyCommand, Mode=OneWay}"
                                    Content="Cancel"
                                    Visibility="{Binding ViewModel.IsCapturingBackwardHotkey, Converter={StaticResource BooleanToVisibilityConverter}}" />
                                <ui:Button
                                    Margin="8,0,0,0"
                                    Command="{Binding ViewModel.ClearBackwardHotkeyCommand, Mode=OneWay}"
                                    Content="Clear"
                                    ToolTip="Remove the hotkey assignment"
                                    Visibility="{Binding ViewModel.CurrentGroupBackwardHotkey, Converter={StaticResource NullToVisibilityConverter}}" />
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</ui:FluentWindow>

