<UserControl x:Class="YAEP.Views.Windows.ThumbnailOverlay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:helpers="clr-namespace:YAEP.Helpers"
             mc:Ignorable="d"
             Background="Transparent"
             IsHitTestVisible="False">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        <helpers:StringToBrushConverter x:Key="StringToBrushConverter" />
        <helpers:IntToThicknessConverter x:Key="IntToThicknessConverter" />
    </UserControl.Resources>
    <Grid Background="Transparent">
        <!-- Focus overlay border -->
        <Border
            BorderBrush="{Binding FocusBorderColor, Converter={StaticResource StringToBrushConverter}, Mode=OneWay}"
            BorderThickness="{Binding FocusBorderThickness, Converter={StaticResource IntToThicknessConverter}, Mode=OneWay}"
            CornerRadius="2"
            Visibility="{Binding IsFocused, Converter={StaticResource BooleanToVisibilityConverter}, Mode=OneWay}" />
        
        <!-- Window title overlay in top left -->
        <TextBlock
            Text="{Binding DisplayTitle, Mode=OneWay}"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Margin="4,4,0,0"
            FontSize="12"
            FontWeight="SemiBold"
            Foreground="White"
            Visibility="{Binding ShowTitleOverlay, Converter={StaticResource BooleanToVisibilityConverter}, Mode=OneWay}">
            <TextBlock.Effect>
                <DropShadowEffect
                    ShadowDepth="1"
                    Color="Black"
                    Opacity="0.8"
                    BlurRadius="2" />
            </TextBlock.Effect>
        </TextBlock>
    </Grid>
</UserControl>

