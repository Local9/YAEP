<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:helpers="using:YAEP.Helpers"
             xmlns:vm="using:YAEP.ViewModels.Pages"
             xmlns:avalonia="using:Avalonia.Styling"
             xmlns:suki="using:SukiUI.Enums"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="YAEP.Views.Pages.SettingsPage"
             x:DataType="vm:SettingsViewModel">

    <ScrollViewer>
        <StackPanel Margin="16">
            <TextBlock
                FontSize="20"
                FontWeight="Medium"
                Text="Settings" />
            
            <TextBlock
                Margin="0,24,0,0"
                FontSize="20"
                FontWeight="Medium"
                Text="Personalization" />
            <TextBlock Margin="0,12,0,0" Text="Theme" />
            <ComboBox
                Margin="0,12,0,0"
                SelectedItem="{Binding CurrentTheme, Mode=TwoWay}"
                HorizontalAlignment="Left"
                MinWidth="150">
                <ComboBox.Items>
                    <x:Static Member="avalonia:ThemeVariant.Light" />
                    <x:Static Member="avalonia:ThemeVariant.Dark" />
                </ComboBox.Items>
            </ComboBox>
            <TextBlock Margin="0,16,0,0" Text="Theme Color" />
            <ComboBox
                Margin="0,12,0,0"
                SelectedItem="{Binding CurrentThemeColor, Mode=TwoWay}"
                HorizontalAlignment="Left"
                MinWidth="150">
                <ComboBox.Items>
                    <x:Static Member="suki:SukiColor.Blue" />
                    <x:Static Member="suki:SukiColor.Green" />
                    <x:Static Member="suki:SukiColor.Red" />
                    <x:Static Member="suki:SukiColor.Orange" />
                </ComboBox.Items>
            </ComboBox>
            
            <TextBlock
                Margin="0,24,0,0"
                FontSize="20"
                FontWeight="Medium"
                Text="General" />
            <CheckBox
                Margin="0,12,0,0"
                Content="Start application hidden"
                IsChecked="{Binding StartHidden}" />
            
            <TextBlock
                Margin="0,24,0,0"
                FontSize="20"
                FontWeight="Medium"
                Text="Thumbnail Behavior" />
            <CheckBox
                Margin="0,12,0,0"
                Content="Enable thumbnail dragging (right-click to drag)"
                IsChecked="{Binding ThumbnailDraggingEnabled}" />
            
            <TextBlock
                Margin="0,24,0,0"
                FontSize="20"
                FontWeight="Medium"
                Text="About" />
            <TextBlock Margin="0,12,0,0" Text="{Binding AppVersion}" />
            <TextBlock Margin="0,8,0,0" Text="{Binding Libraries}" />
        </StackPanel>
    </ScrollViewer>
</UserControl>

