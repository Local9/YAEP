<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="using:YAEP.Views.Windows"
        mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="300"
        x:Class="YAEP.Views.Windows.ThumbnailOverlayWindow"
        x:DataType="local:ThumbnailOverlayWindow"
        Title="Thumbnail Overlay"
        ShowInTaskbar="False"
        SystemDecorations="None"
        MinHeight="108"
        MaxHeight="540"
        MinWidth="192"
        MaxWidth="960"
        Topmost="True"
        Height="{Binding ViewModel.Height}"
        Width="{Binding ViewModel.Width}"
        Background="Transparent"
        WindowStartupLocation="Manual"
        PointerPressed="Window_PointerPressed"
        PointerMoved="Window_PointerMoved"
        PointerReleased="Window_PointerReleased"
        PointerEntered="Window_PointerEntered"
        PointerExited="Window_PointerExited">
    <Grid Background="Transparent" IsHitTestVisible="False">
        <!-- Thumbnail overlay control (border and title text) -->
        <local:ThumbnailOverlay
            x:Name="ThumbnailOverlayControl"
            ZIndex="1"
            Opacity="1.0" />
    </Grid>
</Window>
