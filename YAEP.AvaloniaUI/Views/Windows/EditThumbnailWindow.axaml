<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:YAEP.ViewModels.Pages"
        mc:Ignorable="d" d:DesignWidth="500" d:DesignHeight="400"
        x:Class="YAEP.Views.Windows.EditThumbnailWindow"
        x:DataType="vm:ThumbnailSettingsViewModel"
        Title="Edit Thumbnail"
        Width="500"
        Height="400"
        WindowStartupLocation="CenterOwner"
        CanResize="True"
        Focusable="True">
    
    <ScrollViewer>
        <StackPanel Margin="24">
            <TextBlock
                FontSize="20"
                FontWeight="Medium"
                Text="Edit Thumbnail Setting" />
            <TextBlock
                Margin="0,8,0,0"
                FontSize="12"
                Foreground="{DynamicResource ThemeForegroundBrush}"
                Opacity="0.7"
                Text="Configure the size and opacity for this thumbnail window." />
            
            <!-- Window Title (Read-only) -->
            <TextBlock
                Margin="0,24,0,0"
                Text="Window Title:" />
            <Border
                Margin="0,8,0,0"
                Padding="8,4"
                Background="{DynamicResource ThemeControlBackgroundBrush}"
                BorderBrush="{DynamicResource ThemeBorderBrush}"
                BorderThickness="1">
                <TextBlock
                    Text="{Binding EditingThumbnailWindowTitle}" />
            </Border>
            
            <!-- Width -->
            <Grid Margin="0,16,0,0" ColumnDefinitions="Auto,*,Auto">
                <TextBlock Grid.Column="0" Margin="0,0,8,0" VerticalAlignment="Center" Text="Width:" />
                <Slider
                    Grid.Column="1"
                    Margin="0,0,8,0"
                    Minimum="192"
                    Maximum="960"
                    TickFrequency="1"
                    IsSnapToTickEnabled="True"
                    Value="{Binding EditingThumbnailWidth}" />
                <TextBlock Grid.Column="2" VerticalAlignment="Center" MinWidth="50" TextAlignment="Right" Text="{Binding EditingThumbnailWidth}" />
            </Grid>
            
            <!-- Height -->
            <Grid Margin="0,12,0,0" ColumnDefinitions="Auto,*,Auto">
                <TextBlock Grid.Column="0" Margin="0,0,8,0" VerticalAlignment="Center" Text="Height:" />
                <Slider
                    Grid.Column="1"
                    Margin="0,0,8,0"
                    Minimum="108"
                    Maximum="540"
                    TickFrequency="1"
                    IsSnapToTickEnabled="True"
                    Value="{Binding EditingThumbnailHeight}" />
                <TextBlock Grid.Column="2" VerticalAlignment="Center" MinWidth="50" TextAlignment="Right" Text="{Binding EditingThumbnailHeight}" />
            </Grid>
            
            <!-- Opacity -->
            <Grid Margin="0,12,0,0" ColumnDefinitions="Auto,*,Auto">
                <TextBlock Grid.Column="0" Margin="0,0,8,0" VerticalAlignment="Center" Text="Opacity:" />
                <Slider
                    Grid.Column="1"
                    Margin="0,0,8,0"
                    Minimum="0"
                    Maximum="1"
                    TickFrequency="0.01"
                    IsSnapToTickEnabled="True"
                    Value="{Binding EditingThumbnailOpacity}" />
                <TextBlock Grid.Column="2" VerticalAlignment="Center" MinWidth="50" TextAlignment="Right" Text="{Binding EditingThumbnailOpacity, StringFormat='{}{0:P0}'}" />
            </Grid>
            
            <!-- Buttons -->
            <StackPanel
                Margin="0,24,0,0"
                Orientation="Horizontal"
                HorizontalAlignment="Right">
                <Button
                    Margin="0,0,8,0"
                    Command="{Binding SaveEditThumbnailSettingCommand}"
                    Content="Save" />
                <Button
                    Command="{Binding CancelEditThumbnailSettingCommand}"
                    Content="Cancel" />
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</Window>

